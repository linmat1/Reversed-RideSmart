# User Configuration
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control!

# Login: set FLASK_SECRET_KEY for session cookies. Set USER_*_PASSWORD (or PASSWORD_HASH) to enable login.
FLASK_SECRET_KEY=change-this-to-a-random-secret-in-production

# CORS: comma-separated origins when using credentials (e.g. http://localhost:3000,https://yourapp.vercel.app)
# CORS_ORIGINS=http://localhost:3000

# Default user when login is not required (optional, defaults to 'matthew')
DEFAULT_USER=matthew

# User 1: Matthew (admin sets password for login; no sign-up)
USER_MATTHEW_NAME=Matthew
USER_MATTHEW_AUTH_TOKEN=your_auth_token_here
USER_MATTHEW_USER_ID=3922267
USER_MATTHEW_PASSWORD=admin_set_password

# User 2: Tomas
USER_TOMASLV_NAME=Tomas
